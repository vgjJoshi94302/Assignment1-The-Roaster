<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.viraljoshi.theroaster.MainActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="THE ROASTER"
            android:textSize="40dp"/>
        <TextView
            android:id="@+id/textView2"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_below="@+id/textView1"
            android:fontFamily="cursive"
            android:text="ENTER NAME"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@+id/textView1"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="30dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />
        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="220dp"
            android:layout_height="20dp"
            android:layout_below="@+id/editText"
            android:layout_marginLeft="130dp"
            android:text="Thinks We Are Going Steady"
            android:onClick="itemClicked"/>
        <Spinner
            android:id="@+id/spinner"
            android:layout_below="@+id/checkBox"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_marginLeft="120dp"
            android:prompt="@string/Eye_Color_prompt"
            android:entries="@array/ec">
        </Spinner>
        <TextView
            android:id="@+id/textView3"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginLeft="130dp"
            android:layout_below="@id/spinner"
            android:fontFamily="cursive"
            android:text="BIRTH DATE"
            android:textSize="20dp"
            android:textStyle="bold" />
        <DatePicker
            android:id="@+id/simpleDatePicker"
            android:layout_width="490dp"
            android:layout_height="390dp"
            android:layout_below="@id/textView3"
            android:datePickerMode="calendar"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"/>
        <TextView
            android:id="@+id/textView4"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:layout_below="@+id/simpleDatePicker"
            android:fontFamily="casual"
            android:text="SIZE"
            android:textSize="20dp"
            android:textStyle="bold"
           android:layout_marginLeft="10dp"/>
        <RadioGroup
            android:id="@+id/radgrp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/simpleDatePicker"
            android:orientation="horizontal"
            >
           <RadioButton
               android:id="@+id/rd"
               android:text="XS"
               android:layout_width="55dp"
               android:layout_height="23dp"
               android:layout_marginLeft="60dp"
               android:layout_below="@+id/simpleDatePicker"/>
            <RadioButton
               android:id="@+id/rd1"
               android:text="S"
               android:layout_width="55dp"
               android:layout_height="25dp"
                android:layout_below="@+id/simpleDatePicker"/>
           <RadioButton
               android:id="@+id/rd2"
               android:text="M"
               android:layout_width="55dp"
               android:layout_height="25dp"
               android:layout_below="@+id/simpleDatePicker"
               />
           <RadioButton
               android:id="@+id/rd3"
               android:text="L"
               android:layout_width="55dp"
               android:layout_height="25dp"
               android:layout_below="@+id/rd"
               />
           <RadioButton
               android:id="@+id/rd4"
               android:text="XL"
               android:layout_width="55dp"
               android:layout_height="25dp"
               android:layout_below="@+id/rd2"
               />
           <RadioButton
               android:id="@+id/rd5"
               android:text="XXL"
               android:layout_width="65dp"
               android:layout_height="25dp"
               android:layout_below="@+id/rd2"
               />
        </RadioGroup>
        <TextView
            android:id="@+id/textView5"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="PANT SIZE"
            android:textSize="20dp"
            android:layout_below="@+id/radgrp"/>
        <SeekBar
            android:id="@+id/skbar"
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:layout_below="@id/radgrp"
            android:layout_marginLeft="120dp"
            android:max="16"/>
        <TextView
            android:id="@+id/txtskbar"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/skbar"
            android:layout_marginLeft="70dp"/>
        <TextView
            android:id="@+id/textView6"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:text="SHIRT SIZE"
            android:textSize="20dp"
            android:layout_below="@+id/txtskbar"/>
        <SeekBar
            android:id="@+id/skbar1"
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:layout_below="@id/txtskbar"
            android:layout_marginLeft="120dp"
            android:max="12"/>
        <TextView
            android:id="@+id/txtskbar1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/skbar1"
            android:layout_marginLeft="70dp"/>
        <TextView
            android:id="@+id/textView7"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:text="SHOE SIZE"
            android:textSize="20dp"
            android:layout_below="@+id/txtskbar1"/>
        <SeekBar
            android:id="@+id/skbar2"
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:layout_below="@id/txtskbar1"
            android:layout_marginLeft="120dp"
            android:max="12"/>
        <TextView
            android:id="@+id/txtskbar2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/skbar2"
            android:layout_marginLeft="70dp"/>
        <Button
            android:id="@+id/bt"
            android:layout_below="@id/txtskbar2"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginLeft="170dp"
            android:text="Submit"
            android:onClick="Submit"/>
    </RelativeLayout>
</ScrollView>
</android.support.constraint.ConstraintLayout>